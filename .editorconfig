; .editorconfig file
; EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{yml,yaml,js,ini,toml,json,kv}]
indent_size = 2

[*.py]
max_line_length = 79

[Makefile]
indent_size = 1
indent_style = tab
